<!-- search.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>

  <% if (users.length > 0) { %>
    <ul>
      <% users.forEach(user => { %>
        <li>
          <strong>Name:</strong> <%= user.firstName %> <%= user.lastName %> - 
          <strong>Email:</strong> <%= user.email %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No users found.</p>
  <% } %>
</body>
</html>